<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nju.mapper.RankMapper">
  <resultMap id="BaseResultMap" type="cn.edu.nju.vo.RankVO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="institude" jdbcType="VARCHAR" property="institude" />
    <result column="rank" jdbcType="INTEGER" property="rank" />
  </resultMap>
  <sql id="Base_Column_List">
    id, institude, rank
  </sql>

  <select id="selectAll" resultMap="BaseResultMap">
    SELECT * FROM institude_rank limit 1000
  </select>

  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from institude_rank
    where id = #{id,jdbcType=INTEGER}
  </select>

  <select id="selectByInstitude" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT * FROM institude_rank where institude=#{name}
  </select>

  <delete id="deleteByInstitude" parameterType="java.lang.String">
    delete from institude_rank where institude=#{name}
  </delete>

  <insert id="insert" parameterType="cn.edu.nju.vo.RankVO">
    insert into institude_rank (institude, rank)
    values (#{institude,jdbcType=VARCHAR}, #{rank,jdbcType=INTEGER})
  </insert>
  <update id="updateByInstitude" parameterType="cn.edu.nju.vo.RankVO">
    update institude_rank
    <set>
      <if test="rank != null">
        rank = #{rank,jdbcType=INTEGER},
      </if>
    </set>
    where institude = #{institude,jdbcType=INTEGER}
  </update>

</mapper>