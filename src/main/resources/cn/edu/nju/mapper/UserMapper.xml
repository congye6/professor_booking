<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nju.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="cn.edu.nju.vo.UserVO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="telephone" jdbcType="VARCHAR" property="telephone" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="position" jdbcType="VARCHAR" property="position" />
    <result column="introduction" jdbcType="VARCHAR" property="introduction" />
    <result column="school" jdbcType="VARCHAR" property="school" />
    <result column="icon_url" jdbcType="VARCHAR" property="iconUrl" />
  </resultMap>

  <select id="selectUser" resultMap="BaseResultMap">
    SELECT * FROM `user` ORDER by id limit #{start},#{pageSize}
  </select>

  <select id="selectCount" resultType="java.lang.Integer">
    SELECT count(*) FROM `user`
  </select>

  <select id="selectUserByName" resultMap="BaseResultMap" parameterType="java.lang.String">
    SELECT * from `user` where `name` like concat('%',#{name},'%')
  </select>

  <select id="selectUserBySchool" resultMap="BaseResultMap" parameterType="java.lang.String">
    SELECT * from `user` where school = #{school}
  </select>

  <select id="selectUserByInterest" resultMap="BaseResultMap" parameterType="java.lang.String">
    SELECT * from `user` where research_interest = #{interest}
  </select>

  <select id="selectUserById" resultMap="BaseResultMap">
    SELECT * from `user` where id = #{id}
  </select>

  <delete id="delete" parameterType="java.lang.Integer">
    delete from user
    where id = #{id}
  </delete>
  <insert id="insertSelective" parameterType="cn.edu.nju.vo.UserVO">
    insert into user
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        name,
      </if>
      <if test="telephone != null">
        telephone,
      </if>
      <if test="email != null">
        email,
      </if>
      <if test="position != null">
        position,
      </if>
      <if test="introduction != null">
        introduction,
      </if>
      <if test="school != null">
        school,
      </if>
      <if test="major != null">
        major,
      </if>
      <if test="iconUrl != null">
        icon_url,
      </if>
      <if test="website != null">
        website,
      </if>
      <if test="country != null">
        country,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="telephone != null">
        #{telephone,jdbcType=VARCHAR},
      </if>
      <if test="email != null">
        #{email,jdbcType=VARCHAR},
      </if>
      <if test="position != null">
        #{position,jdbcType=VARCHAR},
      </if>
      <if test="introduction != null">
        #{introduction,jdbcType=VARCHAR},
      </if>
      <if test="school != null">
        #{school},
      </if>
      <if test="major != null">
        #{major},
      </if>
      <if test="iconUrl != null">
        #{iconUrl,jdbcType=VARCHAR},
      </if>
      <if test="website != null">
        #{website},
      </if>
      <if test="country != null">
      #{country},
    </if>
    </trim>
  </insert>
  <update id="updateSelective" parameterType="cn.edu.nju.vo.UserVO">
    update `user`
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="telephone != null">
        telephone = #{telephone,jdbcType=VARCHAR},
      </if>
      <if test="email != null">
        email = #{email,jdbcType=VARCHAR},
      </if>
      <if test="position != null">
        `position` = #{position,jdbcType=VARCHAR},
      </if>
      <if test="introduction != null">
        introduction = #{introduction,jdbcType=VARCHAR},
      </if>
      <if test="school != null">
        school = #{school,jdbcType=VARCHAR},
      </if>
      <if test="major != null">
        major = #{major,jdbcType=VARCHAR},
      </if>
      <if test="iconUrl!=null">
        icon_url=#{iconUrl},
      </if>
      <if test="website != null">
        website=#{website},
      </if>
      <if test="country != null">
        country=#{country},
      </if>
    </set>
    where id = #{id}
  </update>

</mapper>